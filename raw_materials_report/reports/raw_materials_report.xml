<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Прихід буку від посточальників з
                        <t t-esc="data[2]"/>
                        по
                        <t t-esc="data[3]"/>
                    </h2>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th rowspan="3">№ п/п</th>
                                <th rowspan="3">Дата прих</th>
                                <th colspan="4">Вхідні данні посточальника</th>
                                <th rowspan="3">Код</th>
                                <th rowspan="2" colspan="2">К-ть</th>
                                <th colspan="2">Сорт 'A'</th>
                                <th colspan="2">Сорт 'B'</th>
                                <th colspan="2">Сорт 'C'</th>
                                <th colspan="2">Сорт 'D'</th>
                                <th>Всього</th>
                                <!--                                <th rowspan="3">Референс</th>-->
                                <th rowspan="3">Акт №</th>
                            </tr>
                            <tr>
                                <th rowspan="2">Посточал.</th>
                                <th rowspan="2">Водій</th>
                                <th rowspan="2">Накл</th>
                                <th>Об'єм</th>
                                <th>Об'єм</th>
                                <th rowspan="2">%</th>
                                <th>Об'єм</th>
                                <th rowspan="2">%</th>
                                <th>Об'єм</th>
                                <th rowspan="2">%</th>
                                <th>Об'єм</th>
                                <th rowspan="2">%</th>
                                <th>День</th>
                            </tr>
                            <tr>
                                <th>(м3)</th>
                                <th>нк</th>
                                <th>ф-т</th>
                                <th>(м3)</th>
                                <th>(м3)</th>
                                <th>(м3)</th>
                                <th>(м3)</th>
                                <th>(м3)</th>
                            </tr>

                        </thead>
                        <tbody>
                            <t t-foreach="data[0]" t-as="line">
                                <tr>
                                    <td>
                                        <t t-esc="line_index + 1"/>
                                    </td>
                                    <td>
                                        <t t-esc="line['date'].strftime('%d.%m.%Y')"/>
                                    </td>
                                    <td>
                                        <t t-esc="line['comp']"/>
                                    </td>
                                    <td>
                                        <t t-esc="line['partner']"/>
                                    </td>
                                    <td>
                                        <t t-esc="line['origin']"/>
                                    </td>
                                    <td>
                                        <t t-esc="line['quantity']"/>
                                    </td>
                                    <td>
                                        <p>-</p>
                                    </td>
                                    <td>
                                        <p>-</p>
                                    </td>
                                    <td>
                                        <p>-</p>
                                    </td>
                                    <td>
                                        <t t-esc="line['pichA']"/>
                                    </td>
                                    <td>
                                        <p>%</p>
                                    </td>
                                    <td>
                                        <t t-esc="line['pichB']"/>
                                    </td>
                                    <td>
                                        <p>%</p>
                                    </td>
                                    <td>
                                        <t t-esc="line['pichC']"/>
                                    </td>
                                    <td>
                                        <p>%</p>
                                    </td>
                                    <td>
                                        <t t-esc="line['pichD']"/>
                                    </td>
                                    <td>
                                        <p>%</p>
                                    </td>
                                    <td>
                                        <t t-esc="line['quantity']"/>
                                    </td>
                                    <!--                                    <td>-->
                                    <!--                                        <t t-esc="line['reference']"/>-->
                                    <!--                                    </td>-->
                                    <td>
                                        <t t-esc="line_index + 1"/>
                                    </td>
                                </tr>
                            </t>
                            <t>
                                <th colspan="19">
                                </th>
                            </t>
                            <t>
                                <tr>
                                    <td>
                                        <p>-</p>
                                    </td>
                                    <td>
                                        <p>Всього:</p>
                                    </td>
                                    <td>
                                        <p>-</p>
                                    </td>
                                    <td>
                                        <p>-</p>
                                    </td>
                                    <td>
                                        <p>-</p>
                                    </td>
                                    <td>
                                        <t t-esc="data[1]['total_overall_quantity']"/>
                                    </td>
                                    <td>
                                        <p>-</p>
                                    </td>
                                    <td>
                                        <p>-</p>
                                    </td>
                                    <td>
                                        <p>-</p>
                                    </td>
                                    <td>
                                        <t t-esc="data[1]['total_quantities']['pichA']"/>
                                    </td>
                                    <td>
                                        <p>%</p>
                                    </td>
                                    <td>
                                        <t t-esc="data[1]['total_quantities']['pichB']"/>
                                    </td>
                                    <td>
                                        <p>%</p>
                                    </td>
                                    <td>
                                        <t t-esc="data[1]['total_quantities']['pichC']"/>
                                    </td>
                                    <td>
                                        <p>%</p>
                                    </td>
                                    <td>
                                        <t t-esc="data[1]['total_quantities']['pichD']"/>
                                    </td>
                                    <td>
                                        <p>%</p>
                                    </td>
                                    <td>
                                        <t t-esc="data[1]['total_overall_quantity']"/>
                                    </td>
                                    <td>
                                        <p>-</p>
                                    </td>
                                </tr>
                            </t>
                            <t>
                                <td colspan="19">
                                </td>
                            </t>
                            <t t-foreach="data[4]" t-as="line">
                                <tr>
                                    <td colspan="2">

                                    </td>
                                    <td colspan="7">
                                        <p>Ціна 1м3 бука із
                                            <t t-esc="line"/>
                                            : ???,?? грн.
                                        </p>
                                    </td>
                                    <td colspan="10">

                                    </td>
                                </tr>
                            </t>
                            <t>
                                <td colspan="19">
                                </td>
                            </t>
                            <t>
                                <tr>
                                    <td colspan="2">
                                    </td>
                                    <td colspan="17">
                                        <p>Загальна ціна 1м3: ???,?? грн.</p>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

    <record id="raw_materials_report_action" model="ir.actions.report">
        <field name="paperformat_id" ref="paperformat_a4_landscape"/>
        <field name="name">Звіт про прийом сировини</field>
        <field name="model">raw.materials.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">raw_materials_report.report_template</field>
        <field name="report_file">raw_materials_report.report_template</field>
        <field name="binding_model_id" ref="model_raw_materials_report_wizard"/>
        <field name="binding_type">report</field>
    </record>
</odoo>