                        text-align: center;
                        border: none;
                        color: gray;
                        font-weight: bold;
                    }
                    .o_table_general .o_table_title_footer,
                    .o_table_section .o_table_title_footer {
                        text-align: right;
                        font-weight: bold;
                    }
                    /* Page Title */
                    .o_page_title {
                        text-align: center;
                        font-size: 24px;
                        font-weight: bold;
                        margin-bottom: 20px; /* Adjust as needed */
                    }

                    /* Section Container */
