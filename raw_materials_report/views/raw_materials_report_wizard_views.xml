<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_raw_materials_report_wizard_form" model="ir.ui.view">
        <field name="name">raw.materials.report.wizard.form</field>
        <field name="model">raw.materials.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Звіт прийому сировини">
                <group>
                    <group>
                        <field name="start_date" required="1"/>
                        <field name="end_date" required="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_gen_report_html"
                            string="На екран"
                            type="object"
                            class="btn-primary"/>
                    <button name="action_gen_report_pdf"
                            string="Друкувати"
                            type="object"
                            class="btn-primary"/>
                    <button special="cancel"
                            string="Скасувати"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>


